# Environment Variables
# .env dosyası - Production'da değerleri değiştirin

# Flask Configuration
SECRET_KEY=nilufer-waste-management-2024-production-key-change-this
FLASK_ENV=development
DEBUG=True

# Database
DB_PATH=nilufer_waste.db

# Model
MODEL_PATH=models/fill_predictor.pkl

# Server
HOST=0.0.0.0
PORT=5000

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# Security
MAX_CONTENT_LENGTH=16777216  # 16MB
SESSION_COOKIE_SECURE=False  # Production'da True yapın
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Cache
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# Model Training
AUTO_RETRAIN_THRESHOLD=10
MIN_TRAINING_SAMPLES=50
